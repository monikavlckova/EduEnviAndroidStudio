<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Tertiary"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/logoutButton"
        style="@style/backButton"
        android:contentDescription="@string/back" />

    <TextView
        style="@style/headline"
        android:text="Moje triedy" />

    <ImageButton
        android:id="@+id/profileButton"
        style="@style/profileButton"
        android:contentDescription="@string/profile" />

    <ListView
        android:id="@+id/classroomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/Background"
        android:paddingHorizontal="5dp"
        tools:listitem="@layout/classroom_list_item" />

    <ImageButton
        android:id="@+id/addButton"
        style="@style/addButton"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/add" />

    <LinearLayout
        android:id="@+id/classPanel"
        style="@style/backgroundLayout"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_margin="25dp"
            android:background="@drawable/center_layout_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageButton
                    android:id="@+id/closeClassPanel"
                    style="@style/backButtonDark"
                    android:contentDescription="@string/back" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/classNameTextInputLayout"
                style="@style/inputField"
                android:layout_marginHorizontal="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/className"
                    style="@style/inputFieldEditTextColor"
                    android:hint="@string/classroomName"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/saveButton"
                style="@style/actionButton"
                android:layout_marginHorizontal="25dp"
                android:text="@string/create" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editPanel"
        style="@style/backgroundLayout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bottom_layout_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageButton
                    android:id="@+id/closeEditPanel"
                    style="@style/closeButton"
                    android:contentDescription="@string/close" />
            </RelativeLayout>

            <Button
                android:id="@+id/editButton"
                style="@style/actionButton"
                android:layout_marginHorizontal="25dp"
                android:text="@string/edit" />

            <Button
                android:id="@+id/deleteButton"
                style="@style/actionButton"
                android:layout_marginHorizontal="25dp"
                android:text="@string/delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deletePanel"
        style="@style/backgroundLayout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bottom_layout_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deleteText"
                style="@style/deletePanelText1" />

            <TextView style="@style/deletePanelText2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/closeDeletePanel"
                    style="@style/smallActionCancelButton"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/confirmDelete"
                    style="@style/smallActionDeleteButton"
                    android:text="@string/delete" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>